{
    "ros.distro": "noetic",
    "clangd.path": "clangd-18",
    "clangd.arguments": ["--compile-commands-dir=${workspaceFolder}/build"],
    "C_Cpp.intelliSenseEngine": "disabled",

    "python.envFile": "${workspaceFolder}/.env",

  "terminal.integrated.profiles.linux": {
    "zsh": { "path": "/usr/bin/zsh", "args": ["-l"] },
    "bash-auto": { "path": "/usr/bin/bash", "args": ["-l"] }
  },

  // what you see when you hit Ctrl+`
  "terminal.integrated.defaultProfile.linux": "zsh",

  // what VS Code uses for Tasks, debug, dev-container scripts, etc.
  "terminal.integrated.automationProfile.linux": "bash-auto"


}